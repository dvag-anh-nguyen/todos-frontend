{
  "swagger": "2.0",
  "info": {
    "description": "Task API Service",
    "version": "4.0.12-SNAPSHOT:2021-08-03T09:18:46Z",
    "title": "Task API"
  },
  "host": "localhost",
  "basePath": "/task",
  "tags": [
    { "name": "task", "description": "the Task API" }
  ],
  "paths": {
    "/rest/v1/task": {
      "get": {
        "tags": ["task"],
        "summary": "Find all tasks",
        "operationId": "findTasks",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "taskStatus",
            "description": "TaskStatus",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TaskStatus"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/TaskList"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "basicAuth": []
          }
        ],
        "deprecated": false
      }
    }
  },
  "definitions": {
    "TaskStatus": {
      "type": "string",
      "enum": ["NOT_STATED","DEFERRED", "IN_PROGRESS","CANCELED", "FAILED", "SUCCESSFUL", "WAITING_ON_OTHERS"]
    },
    "Task" : {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uuid",
          "required": true
        },
        "title": { "type": "string", "required": true },
        "description": { "type": "string" },
        "createdOn": {  "type": "string", "format": "date-time", "required": true  }
      }
    },
    "TaskList": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Task"
      }
    }
  }
